<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Index Hewan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container">
    <% if (messages.success) { %>
        <div class="alert alert-info" role="alert">
            <%= messages.success %>
        </div>
    <% } %>

    <div class="row mb-3">
        <div class="col">
            <a href="/hewan/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Tambah Hewan
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>ID</th>
                <th>Objek</th>
                <th>Id_Kategori</th>
                <th>image</th>
                <th>Audio</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% for (var i = 0; i < data.length; i++) { %>
                <tr>
                    <td><%= i + 1 %></td>
                    <td><%= data[i].id %></td>
                    <td><%= data[i].objek %></td>
                    <td><%= data[i].kategori_id %></td>
                    <td><%= data[i].image %></td>
                    <td><%= data[i].audio %></td>
                    <td>
                        <a href="/hewan/edit/<%= data[i].id %>" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/hewan/delete/<%= data[i].id %>" class="btn btn-danger btn-sm" onclick="return confirm('Yakin ingin menghapus data ini?')">Hapus</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
</body>
</html>
